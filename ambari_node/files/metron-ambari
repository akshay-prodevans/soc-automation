#Hadoop HDFS Logs
/var/log/hadoop/hdfs/*.log* {
  daily
  rotate 30
  missingok
  notifempty
  copytruncate
  compress
}

/var/log/hadoop/hdfs/*.out {
  daily
  rotate 30
  missingok
  notifempty
  copytruncate
  compress
}

/var/log/hadoop/hdfs/*.audit {
  daily
  rotate 30
  missingok
  notifempty
  copytruncate
  compress
}

